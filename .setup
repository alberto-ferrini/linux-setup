#!/bin/bash

# Set the software home
export SOFTWARE_HOME="$HOME/software"

# Set the Java home
if [[ ! -v JAVA_HOME ]]; then
  export JAVA_HOME="$SOFTWARE_HOME/jdk/jdk-21.0.4+7"
  export JAVA_VERSION="21"
fi

# Set the scripts path
export PATH="$HOME/scripts:$PATH"

# Set the Java path
export PATH="$JAVA_HOME/bin:$PATH"

